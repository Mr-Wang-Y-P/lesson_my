.hero image, .hero video {
  height: 38.2vh;
}
.hero.white {
  background: #ffffff;
}
.hero .content {
  padding-top: 10%;
}
.hero .content.centered {
  text-align: center;
}
.hero .sub-header {
  font-size: 32rpx;
